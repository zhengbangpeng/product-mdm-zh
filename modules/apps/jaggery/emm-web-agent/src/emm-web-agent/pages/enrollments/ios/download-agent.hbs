{{!-- Using enrollment layout --}}
{{layout "enrollment"}}
{{!-- defining controlled access parameters --}}
{{#zone "accessControl"}}
    {{
        unit "enrollment-access-control"
        allowedPlatform = "iOS"
        currentPage = "download-agent"
        nextPage = "login-agent"
    }}
{{/zone}}
{{!-- Inputting content into defined zones in enrollment layout --}}
{{#zone "title"}}
    {{
        unit "title"
        pageTitle = "iOS Enrollment | Install Certificate and Agent"
    }}
{{/zone}}
{{#zone "header"}}
    iOS Enrollment
{{/zone}}
{{#zone "body"}}
    {{
        unit "wizard-stepper"
        steps = "Install Certificate and Agent,
        Login to Enterprise Mobility Manager,
        Accept End User License Agreement"
        currentStep = "Install Certificate and Agent"
        currentStepIndex = 0
    }}
    {{
        unit "asset-download-agent-ios"
    }}
{{/zone}}