{{#each features}}
    <a href="javascript:operationSelect('{{code}}')" title="{{description}}">
        <i class="fw {{icon}}"></i>
        <span>{{name}}</span>
    </a>
    <div class="operation" data-operation-code="{{code}}">
        <div class="content">
            <div class="row">
                <div class="col-lg-5 col-md-6 col-centered">
                    <h3>
                        <span class="fw-stack">
                            <i class="fw fw-ring fw-stack-2x"></i>
                            <i class="fw {{icon}} fw-stack-1x"></i>
                        </span>
                        {{name}}
                        <br>
                    </h3>
                    <h4>
                        {{#equal code "WIPE_DATA"}}
                            {{#equal type "android"}}
                                EK-Enter_PIN_code (EK-optional - EK-Required_For_byod)
                                <br><br>
                                <div>
                                    <input type="password" class="form-control modal-input operationDataKeys" id="pin" data-key="pin"></textarea>
                                </div>
                                <br>
                            {{/equal}}
                        {{/equal}}
                        {{#equal code "NOTIFICATION"}}
                            EK-Type_Your_Message_below
                            <br><br>
                            <div id="notification-error-msg" class="alert alert-danger hidden" role="alert">
                                <i class="icon fw fw-error"></i><span></span>
                            </div>
                            <div>
                                <textarea class="form-control modal-input operationDataKeys" id="message" data-key="message"></textarea>
                            </div>
                            <br>
                        {{/equal}}
                        {{#equal code "CHANGE_LOCK_CODE"}}
                            EK-Type_New_Lockcode_below
                            <br><br>
                            <input type="password" class="form-control modal-input operationDataKeys" id="lockcode" data-key="lockCode" placeholder="EK-Enter_lockcode" />
                            <br>
                        {{/equal}}
                        EK-Ask_Perform_operation?
                        <br>
                    </h4>
                    <div class="buttons">
                        <a href="javascript:runOperation('{{code}}')" class="btn-operations">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;EK-yes&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </a>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="javascript:hidePopup()" class="btn-operations">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;EK-cancel&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}
<br class="c-both" />