{{#zone "main"}}
    <span id="permission" data-permission="{{permissions}}"></span>
    <div class="row wr-device-board">
        <div class="col-lg-12 wr-secondary-bar">
            <span class="page-sub-title">EK-devices</span>
        </div>
    </div>
    <div id="loading-content" class="col-centered">
        <i class="fw fw-settings fw-spin fw-2x"></i>
        &nbsp;&nbsp;&nbsp;
        EK-devices EK-loading  . . .
        <br>
    </div>
    <div class="container-fluid">
    <span id="device-listing-status-msg" ></span>
    <div id="device-table">
        <table class="table table-striped table-hover list-table display responsive nowrap data-table table-selectable grid-view hidden" id="device-grid">
            <thead>
            <tr class="sort-row">
                <th class="no-sort"></th>
                <th>EK-By_Device_name</th>
                <th>EK-By_owner</th>
                <th>EK-By_status</th>
                <th>EK-By_platform</th>
                <th>EK-By_Owner_ship</th>
                <th class="no-sort"></th>
            </tr>
            <tr class="filter-row filter-box">
                <th class="no-sort"></th>
                <th data-for="EK-By_Device_name" class="text-filter"></th>
                <th data-for="EK-By_owner" class="text-filter"></th>
                <th data-for="EK-By_status" class="select-filter"></th>
                <th data-for="EK-By_platform" class="select-filter data-platform"></th>
                <th data-for="EK-By_Owner_ship" class="select-filter"></th>
                <th class="no-sort"></th>
            </tr>
            <tr class="bulk-action-row">
                <th colspan="7">
                    <div id = "operation-bar">
                        {{unit "operation-bar"}}
                    </div>
                    <div id="operation-guide" class="bs-callout bs-callout-info">
                        <h4>EK-Enabling_Device_operations</h4>
                        <p>EK-Enable_Device_operations</p>
                    </div>
                </th>
            </tr>
            </thead>
            <tbody id="ast-container">

            <br class="c-both" />
        </tbody>
        </table>
    </div>
    </div>
    <br class="c-both"/>
    <div id="content-filter-types" style="display: none">
        <div class="sort-title">EK-Sort_by</div>
        <div class="sort-options">
            <a href="#">EK-By_Device_name<span class="ico-sort-asc"></span></a>
            <a href="#">EK-By_owner</a>
            <a href="#">EK-By_status</a>
            <a href="#">EK-By_platform</a>
            <a href="#">EK-By_Owner_ship</a>
        </div>
    </div>

{{/zone}}
{{#zone "bottomJs"}}
    <script id="device-listing" data-current-user="{{currentUser.username}}" data-image-resource="{{self.publicURL}}/images/" src="{{self.publicURL}}/templates/device-listing.hbs" type="text/x-handlebars-template" ></script>
    <script src="{{self.publicURL}}/js/device-listing-ek.js"></script>
{{/zone}}